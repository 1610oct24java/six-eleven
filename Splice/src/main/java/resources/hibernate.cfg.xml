		     But do NOT delete the main online DB connection, just comment it out so during pushes,
		     no one loses the main online connection properties. -->
		<!-- TODO connection url matches our aws rds instance, driver info needs to match mysql format -->     
		<property name="hibernate.connection.url">jdbc:mysql:@game611.cmidwbhaqwzg.us-east-1.rds.amazonaws.com:3306</property>
		<property name="hibernate.connection.username">GameMaster</property>
		<property name="hibernate.connection.password">gamemaster</property>
		<property name="hibernate.connection.pool_size">35</property>
		
		<property name="show_sql">true</property>
		<property name="hibernate.format_sql">false</property>
		
		<!-- We have to tell hibernate where our classes it maps are -->
		<mapping class="com.revature._611.beans.User"/>
		
		<!-- Example of an HBM FILE MAPPING -->
		<!-- <mapping resource="myObject.hbm.xml"/> -->
	</session-factory>
</hibernate-configuration>